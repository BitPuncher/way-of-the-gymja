  $(document).ready(function(){
    WayOfTheGymja.initialize();
  });
</script>

<%- model_class = User -%>
<div class="row">
  <div class="span4">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    </div>
  </div>

  <div class="span4 offset4">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
      <dd><%= @user.email %></dd>
    </dl>
  </div>
</div>

<div class="user-attributes row">
  <div class="span2 offset4 user-age">
    <%= @user.birthday %>
  </div>

  <div class="span2 user-height">
    <%= @user.height / 12 %>'<%= @user.height % 12 %>"
  </div>

  <div class="span2 user-gender">
    <%= @user.gender %>
  </div>
</div>

<div class="row">
  <div class="span3" id="content-selector">
  </div>

  <div class="span8 offset1" id="backbone-content">
  </div>
</div>

