<!DOCTYPE html>
<html>
<head>
  <title>WayOfTheGymja</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script>
    <% if current_user %>
    	WayOfTheGymja.current_user = <%= current_user.id %>
    <% end %>
  </script>
</head>
<body>
<!-- 
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p> -->

<%= nav_bar :fixed => :top do %>
  <%= menu_group do %>
    <%= menu_item "Profile", current_user ? user_url(current_user) : new_user_session_url %>
    <%= menu_item "Track", track_url %>
  <% end %>
<% end %>

<div class="row">
  <div class="logo">
  </div>
</div>

<%= yield %>

</body>
</html>