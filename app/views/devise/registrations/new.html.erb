<div class="row text-center">
	<h2>Sign up</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row-fluid text-center">
	  <div class="span4 offset2 text-center">
		  <div><%= f.label :username %>
		  	<%= f.text_field :username, auto_focus: true %></div>

		  <div><%= f.label :email %>
		  <%= f.email_field :email %></div>

		  <div><%= f.label :password %>
		  <%= f.password_field :password %></div>

		  <div><%= f.label :password_confirmation %>
		  <%= f.password_field :password_confirmation %></div>
		</div>

		<div class="span4 text-center">
		  <div><%= f.label :birthday %>
		  	<input type="date" name="user[birthday]" id="birthday"></div>

	  	<div><%= f.label :height %>
	  		<%= f.text_field :height %></div>

	  	<div><%= f.label :gender %>
	  		<%= f.select :gender, { "Male" => "male", "Female" => "female" }, { include_blank:true } %></div>

	  	<div><%= f.label :clan %>
	  		<%= f.select :clan, { "Koga" => "Koga", "Iga" => "Iga" }, { include_blank:true } %></div>
  	</div>
  </div>
<div class="row text-center"
  <div><%= f.submit "Sign up" %></div>
</div>
<% end %>

<%= render "devise/shared/links" %>